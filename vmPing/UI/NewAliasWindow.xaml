<Window x:Class="vmPing.UI.NewAliasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resource="clr-namespace:vmPing.Properties"
        Title="New Alias"
        UseLayoutRounding="True"
        Height="Auto"
        Width="400"
        SizeToContent="Height"
        ResizeMode="NoResize"
        Background="#f0f0f0"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Margin="9">

            <!-- Header -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <Image Source="{StaticResource icon.alias}" VerticalAlignment="Center" Width="20" Height="20" Margin="0,0,8,0"/>
                <TextBlock Text="{x:Static resource:Strings.NewAlias_Header}"
                           TextTrimming="CharacterEllipsis"
                           Style="{StaticResource ResourceKey=OptionHeaderTextStyle}"/>
            </StackPanel>

            <!-- Hostname TextBox-->
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                <Border Width="50" Margin="0,0,15,0">
                    <TextBlock Text="{x:Static resource:Strings.NewAlias_Host}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Foreground="#404040"
                               HorizontalAlignment="Right"/>
                </Border>
                <TextBox Name="MyHost"
                         MaxLength="64"/>
            </DockPanel>

            <!-- Alias TextBox-->
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                <Border Width="50" Margin="0,0,15,0">
                    <TextBlock Text="{x:Static resource:Strings.NewAlias_Alias}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Foreground="#404040"
                               HorizontalAlignment="Right"/>
                </Border>
                <TextBox Name="MyAlias"
                         MaxLength="64"/>
            </DockPanel>
        </DockPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="9,0,9,9">
            <Button Style="{StaticResource ButtonStandardStyle}"
                    IsDefault="True"
                    Margin="0,0,9,0"
                    Click="Save_Click"
                    Width="85"
                    Content="{x:Static resource:Strings.DialogButton_Save}" />
            <Button Style="{StaticResource ButtonStandardStyle}"
                    Width="85"
                    IsCancel="True"
                    Content="{x:Static resource:Strings.DialogButton_Cancel}" />
        </StackPanel>
    </Grid>
</Window>
